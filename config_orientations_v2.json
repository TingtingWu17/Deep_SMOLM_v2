{   
    "name": "localizations_only",
    "n_gpu": 1,
    "seed": 666,

    "comet": {
        "api": "HS8aaMUrFL1HqxSzscKX8QGd7",
        "offline": false
    },

    "arch": {
        "type": "UNet",
        "args": {}
    },


    "data_loader": {
        "type": "MicroscopyDataLoader",
        "args":{
            "data_dir": "../../data/polarized_PSF_data/trainingDataMay5_SNR380vs2_flipped/",
            "batch_size": 4,
            "shuffle": true,
            "num_batches": 0,
            "validation_split": 0,
            "num_workers": 16,
            "pin_memory": false
        }
    },


    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001,
            "momentum": 0.9,
            "weight_decay": 5e-4
        }
    },
    
    "scaling_factor": 800.0,
    "train_loss": "orientaitons_loss",
    "test_loss": "orientaitons_loss",
    "val_1SM_loss": "RMSE_1SM",
    "Jaccard_1SM_thred":10,
    "val_2SMs_loss": "RMSE_1SM",
    "Jaccard_2SMs_thred":10,

    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 80,
            "gamma": 0.5
        }
    },

    
   "microscopy_params": {
        "setup_params":{
            "H": 60,
            "W": 60,
            "pixel_sz_org": 58.6,
            "upsampling_ratio": 6
        }
    },
    
    

    "trainer": {
        "epochs": 40,
        "warmup": 0,
        "save_dir": "../../data/save/",
        "save_period": 1,
        "verbosity": 2,
        "asym": false,
        "sym": false,
        "percent": 0.9,
        "subset_percent": 1.0,
        "monitor": "min test_loss",
        "early_stop": 10
    },

    "training_dataset": {
        "noise_image_name": "image_with_poission_bkgdRmvd_up",
        "GT_image_name": "image_GT_up",
        "GT_list_name": "",
        "file_folder": "../../data/opt_PSF_data_1000vs2/training_20210331_SNR1000vs2_large_variance/",
        "number_images":25
    },

    "validation_dataset_1SM": {
        "noise_image_name": "image_with_poission_bkgdRmvd_up",
        "GT_image_name": "image_GT_up",
        "GT_list_name": "",
        "file_folder": "../../data/opt_PSF_data_1000vs2/validation_20210331_1SM_fixed/",
        "number_images":10,
        "batch_size": 4
    },

    "validation_dataset_2SMs": {
        "noise_image_name": "image_with_poission_bkgdRmvd_up",
        "GT_image_name": "image_GT_up",
        "GT_list_name": "",
        "file_folder": "../../data/opt_PSF_data_1000vs2/validation_20210331_2SM_fixed/",
        "number_images":10,
        "batch_size": 4
    }
}
